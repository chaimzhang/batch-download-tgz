{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist/tsc",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
